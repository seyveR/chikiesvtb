<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/officeName4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Наименование"/>

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/officeAddress4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Адрес"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_route2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="@drawable/button_style"
        android:text="Проложить маршрут"
        android:textSize="17dp" />
    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/talon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Ваш талон: "
        android:gravity="center"/>

    <ImageView
        android:layout_marginTop="16dp"
        android:id="@+id/qrcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:src="@drawable/qrcode"/>
    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Выбранная услуга: "/>
    <TextView
        android:id="@+id/selectedService"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="17sp"
        android:background="@drawable/arh_round2"
        android:text="Выбранная услуга: "/>
    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Необходимые документы: "/>
    <TextView
        android:id="@+id/documents"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:textSize="17sp"
        android:text="Документы"/>


</LinearLayout>